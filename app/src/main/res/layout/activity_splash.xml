<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bluegrey">

        <Button
            android:id="@+id/navigate_to_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="@dimen/button_margin"
            android:layout_marginEnd="20dp"
            android:text="@string/button_go_to_movie_list"
            android:textSize="@dimen/title_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/navigate_to_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="@dimen/button_margin"
            android:layout_marginEnd="20dp"
            android:text="@string/button_go_to_recylcer_view"
            android:textSize="@dimen/title_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/navigate_to_list" />

        <Button
            android:id="@+id/navigate_to_fragments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="@dimen/button_margin"
            android:layout_marginEnd="20dp"
            android:text="@string/button_go_to_fragments"
            android:textSize="@dimen/title_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/navigate_to_recyclerView" />

        <Button
            android:id="@+id/navigate_to_scan_qr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="@dimen/button_margin"
            android:layout_marginEnd="20dp"
            android:text="@string/button_go_to_scan_qr"
            android:textSize="@dimen/title_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/navigate_to_fragments" />

        <Button
            android:id="@+id/navigate_to_calbacks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="@dimen/button_margin"
            android:layout_marginEnd="20dp"
            android:text="@string/button_go_to_callbacks"
            android:textSize="@dimen/title_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/navigate_to_scan_qr" />

        <Button
            android:id="@+id/navigate_to_product_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="@dimen/button_margin"
            android:layout_marginEnd="20dp"
            android:text="@string/button_go_to_product_list"
            android:textSize="@dimen/title_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/navigate_to_calbacks" />

        <Button
            android:id="@+id/navigate_to_navigation_drawer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="@dimen/button_margin"
            android:layout_marginEnd="20dp"
            android:text="@string/button_go_to_navigation_drawer"
            android:textSize="@dimen/title_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/navigate_to_product_list" />


        <EditText
            android:id="@+id/user_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese su usuario"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/navigate_to_navigation_drawer" />


        <TextView
            android:id="@+id/selectedProductTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:text="PRODUCTO DE BASE DE DATOS"
            app:layout_constraintTop_toBottomOf="@id/user_name_edit_text"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
            android:id="@+id/navigate_to_database_inspect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="@dimen/button_margin"
            android:layout_marginEnd="20dp"
            android:text="@string/button_go_to_navigation_database_inspect"
            android:textSize="@dimen/title_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/selectedProductTextView" />

        <Button
            android:id="@+id/navigate_to_networking_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="@dimen/button_margin"
            android:layout_marginEnd="20dp"
            android:text="@string/button_go_to_navigation_networking_activity"
            android:textSize="@dimen/title_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/navigate_to_database_inspect" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>